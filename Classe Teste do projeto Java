package teste;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import conteudo.Salas;

public class Testes {

	public static void main(String[] args) {

		Salas();

	}

	public static void Salas() {
		
		Scanner entrada = new Scanner(System.in);
		Salas sala;
		List<Salas> listaSalas = new ArrayList<>();
		int opcao = 0;
		
		
		
		
		do {
		      	System.out.println("¨¨¨¨FATBUG - CONTROLE DE RECURSOS¨¨¨¨");
		      	System.out.println("Opção 1 - Cadastrar sala");
		          System.out.println("Opção 2 - Visualizar salas");
		          System.out.println("Opção 3 - Finalizar programa");
		          System.out.println("_______________________");		
		          System.out.print("Selecione uma opção: ");
		          opcao = Integer.parseInt(entrada.nextLine());
        
        if(opcao == 1){
                    sala = new Salas(null);
                 

                System.out.print("Digite o nome: ");
                sala.setIdSala(entrada.nextLine());
                 
                System.out.println(); 
                listaSalas.add(sala);
                
                }else if(opcao == 2){
                  if(listaSalas.isEmpty()){
                    System.out.println("Não existem salas cadastradas, pressione uma tecla para continuar!");
                    entrada.nextLine();
                  }else{
                    System.out.println(listaSalas.toString());
                     
                    System.out.println("Pressione um tecla para continuar.");
                    entrada.nextLine();
                  }         } 
        
        }while (opcao != 0);
        
     	entrada.close();
      }
}
